generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Forest {
  mId          Int    @id @default(autoincrement()) @map("m_id")
  mName        String @unique @map("m_name")
  mCoordinates Json   @map("m_coordinates")

  @@map("forest")
}

model notification {
  m_id         Int      @id @default(autoincrement())
  m_title      String
  m_body       String
  m_image      String?
  m_type       String
  m_severity   String
  m_forest_id  Int?
  m_created_at DateTime @default(now())

  @@index([m_created_at])
  @@index([m_forest_id])
}
